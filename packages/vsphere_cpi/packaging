#!/usr/bin/env sh

set -e -x

BOSH_PACKAGES_DIR=${BOSH_PACKAGES_DIR:-/var/vcap/packages}

cp -a vsphere_cpi/* ${BOSH_INSTALL_TARGET}

bundle_cmd="$BOSH_PACKAGES_DIR/vsphere_cpi_ruby/bin/bundle"

cd ${BOSH_INSTALL_TARGET}

$bundle_cmd install \
  --local           \
  --no-prune        \
  --deployment      \
  --path ${BOSH_INSTALL_TARGET}/vendor
